<!DOCTYPE html>

<html>
	<head>
		
		<link href="https://fonts.googleapis.com/css?family=Oswald|Source+Sans+Pro&display=swap" rel="stylesheet">
	
		<title>DLSU Profs to Pick | User</title>
		
		<link rel="stylesheet" href="../css/styleMP.css">
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

		<script src="../js/profile.js" type="text/javascript"></script>
		
	</head>
	
	<body>
		{{> navBar}}
		
		<div id="content">
			<div id="info">
				<div id="picture">
					<img src="../images/{{dpPath}}" width="150" height="150">
				</div>
				
				<div id="details">
					<div class="detailDiv">
						<p class="label">Username: </p><p id="uuName">{{uuName}}</p>
					</div>
					<div class="detailDiv">
						<p class="label">Name: </p><p>{{name}}</p>
					</div>
					<div class="detailDiv">
						<p class="label">ID Number: </p><p>{{id}}</p>
					</div>
					<div class="detailDiv">
						<p class="label">Email: </p><p>{{email}}</p>
					</div>
					<div class="detailDiv">
						<p class="label">Course: </p><p>{{course}}</p>
					</div>
				</div>
			</div>
			
			<div id="reviews">
				<h3>Reviews</h3>
				<div id="reviewBox">
					
					{{#each revEntries}}
						<div class="revEntry">
							<div class="revAbt">
								<img src="../images/{{imagePath}}" class="dpIcon" width="40" height="40">
								<p class="reviewer"><a href="/user/{{reviewer}}">{{reviewer}}</a></p>
								<p class="buttonX">Delete</p>
								<p class="buttonE">Edit</p>
							</div>
							
							<div class="revAbt">
								<p class="reviewee"><a class="toProf" href="/faculty/{{reviewee_u}}">{{reviewee}}</a></p>
								<p class="revTag"><b class="course">{{revCourse}}</b> âœ¯<b class="star">{{revStar}}</b></p>
							</div>
							
							<p class="revDet">{{revDet}}</p>
						</div>
					{{/each}}
					
				</div>
			</div>
		</div>
		
		<script type="text/javascript">
			function submit(){

				var key = $('#searchBar').children('#searchKey').val();

				window.location = "../result?key=" + key;
			};

			$('input').on('keydown', function(event) {
				var x = event.which;
				if (x === 13) {
					event.preventDefault();
				}
			});

			$("[type='number']").keypress(function (evt) {
				evt.preventDefault();
			});
		</script>
	</body>
</html>